<Window x:Class="KIID_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIID_Frontend"
        mc:Ignorable="d"   
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Genera Kiids" Height="350" Width="363.022">
    <Grid Margin="0,0,5.556,0.111">
        <ComboBox x:Name="cboLingua" HorizontalAlignment="Left" Margin="271,104,0,0" VerticalAlignment="Top" Width="56" SelectedIndex="0" >
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <ListBoxItem Content="ITA" />
            <ListBoxItem Content="ENG" />
        </ComboBox>

        <DatePicker x:Name="datePick"  HorizontalAlignment="Left" Margin="187,77,0,0"  SelectedDate="{x:Static sys:DateTime.Now}" VerticalAlignment="Top" Height="22">
            <DatePicker.Effect>
                <DropShadowEffect/>
            </DatePicker.Effect>
        </DatePicker>
        <Button Content="Scegli Template" HorizontalAlignment="Left" Height="35" Margin="30,154,0,0" VerticalAlignment="Top" Width="102" Click="BtnScegliWord">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Scegli File Dati" HorizontalAlignment="Left" Height="35" Margin="30,198,0,0" VerticalAlignment="Top" Width="102" Click="BtnScegliExcel">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnEsegui" Content="Esegui" IsEnabled="False" HorizontalAlignment="Left" Height="35" Margin="30,259,0,0" VerticalAlignment="Top" Width="297" Click="BtnEseguiClick">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label x:Name="lblTitolo" Content="Generazione KIIDS" HorizontalAlignment="Center" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="333" FontSize="24"/>
        <Label Content="Data Kiids" HorizontalAlignment="Left" Margin="30,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Lingua Kiids" HorizontalAlignment="Left" Margin="30,108,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTemplate" Content="-" HorizontalAlignment="Left" Margin="187,154,0,0" VerticalAlignment="Top" Width="140"/>
        <Label x:Name="lblDataFile" Content="-" HorizontalAlignment="Left" Margin="187,202,0,0" VerticalAlignment="Top" Width="140"/>

    </Grid>
</Window>
